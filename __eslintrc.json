{
  "extends": [
    "next/core-web-vitals",
    "hardcore",
    "hardcore/react",
    "hardcore/react-testing-library",
    "hardcore/jest",
    "hardcore/fp",
    "hardcore/ts"
  ],

  "parserOptions": {
    "project": "./tsconfig.json"
  },

  "env": {
    "browser": true
  },

  "overrides": [
    {
      "files": ["src/pages/**/*.tsx"],
      "rules": {
        "import/no-unused-modules": "off"
      }
    },
    {
      "files": ["src/pages/api/**/*.ts"],
      "extends": ["hardcore/node"],
      "env": {
        "browser": false
      }
    }
  ]
}
